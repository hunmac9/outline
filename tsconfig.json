{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["dom", "es2020", "dom.iterable", "esnext.asynciterable"], // Reverted lib change
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitOverride": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noEmit": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "target": "es2020",
    "types": ["node"], // Re-added explicit types array
    "paths": {
      "@server/*": ["./server/*"],
      "@shared/*": ["./shared/*"],
      "~/*": ["./app/*"]
    }
  },
  "include": [ // Explicitly include config and source dirs
    "vite.config.ts",
    "app/**/*",
    "server/**/*",
    "shared/**/*",
    "plugins/**/*"
  ],
  "exclude": ["node_modules", "build", "server/migrations"]
}
